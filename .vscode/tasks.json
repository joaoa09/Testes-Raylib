{
    "version": "2.0.0",
    "tasks": [
        {
            // Tarefa 1: Apenas compila o código (com correção de PATH)
            "label": "Build",
            "type": "shell",
            "command": "C:/raylib/w64devkit/bin/gcc.exe",
            "args": [
                "-o",
                "build/meujogo.exe",
                "src/undertale_jogo.c", // <--- Esta linha garante que o jogo seja compilado junto
                "-I", "C:/raylib/raylib/include",
                "-L", "C:/raylib/raylib/lib",
                "-lraylib",
                "-lwinmm",
                "-lgdi32",
                "-lopengl32",
                "-static"
            ],
            // --- NOVA SEÇÃO ADICIONADA ABAIXO ---
            // Esta opção corrige o PATH apenas para esta tarefa,
            // forçando o Windows a encontrar as ferramentas certas primeiro.
            "options": {
                "env": {
                    "PATH": "C:\\raylib\\w64devkit\\bin;${env:PATH}"
                }
            },
            // ------------------------------------
            "group": "build",
            "presentation": {
                "reveal": "always",
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "${workspaceFolder}/build/meujogo.exe",
            "dependsOn": [
                "Build"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Build and Run",
            "dependsOn": [
                "Build",
                "Run"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:/raylib/w64devkit/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/raylib/w64devkit/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}